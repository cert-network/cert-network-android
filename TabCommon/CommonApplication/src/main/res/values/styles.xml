<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorSecondaryLight">@color/secondary_light</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryDark">@color/secondary_dark</item>

        <item name="colorAccent">@color/accent</item>


        <item name="colorBackgroundActivity">@color/background_white</item>
        <item name="colorBackgroundActivityOverlay">@color/background_white_overlay</item>
        <item name="colorSurface">@color/surface_white</item>

        <item name="colorTextActive">@color/text_active_black</item>
        <item name="colorTextInactive">@color/text_inactive_black</item>
        <item name="colorTextDisabled">@color/text_disabled_black</item>
        <item name="colorTextDisabledExtra">@color/base_color_black_alpha_20</item>


        <item name="colorIconActive">@color/icon_active_black</item>
        <item name="colorIconInactive">@color/icon_inactive_black</item>
        <item name="colorIconDisabled">@color/icon_disabled_black</item>
        <item name="colorIconDisabledExtra">@color/base_color_black_alpha_20</item>

        <item name="colorDivider">@color/divider_black</item>



    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:statusBarColor">@color/toolbar</item>-->
    </style>


    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <!--<item name="android:windowLightStatusBar">false</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="CertDetailTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">#2196F3</item>
    </style>

    <style name="MainActivity" parent="AppTheme.NoActionBar">
    </style>

    <style name="AddCertActivity" parent="AppTheme.NoActionBar">
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:textColorPrimary">@color/md_white</item>-->
        <!--<item name="actionMenuTextColor">@color/md_white</item>-->
        <!--<item name="colorAccent">@color/primary_water</item>-->
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

</resources>