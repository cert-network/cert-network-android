<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:layout_marginBottom="@dimen/padding_margin"
    android:layout_marginEnd="@dimen/padding_margin_xh"
    android:layout_marginStart="@dimen/padding_margin_xh"
    android:layout_marginTop="@dimen/padding_margin"
    android:background="@drawable/cert_card_background">

    <android.support.constraint.ConstraintLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/holder_cert_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/padding_margin_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cert_network"
            app:tint="#ffffff" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/holder_cert_tv_title"
            style="@style/AppTextView.SecondaryFont.WhiteActive.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_x"
            android:singleLine="true"
            android:layout_marginTop="@dimen/padding_margin"
            app:layout_constraintBottom_toTopOf="@+id/holder_cert_tv_sub_title"
            app:layout_constraintStart_toEndOf="@+id/holder_cert_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Technologies" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/holder_cert_tv_sub_title"
            style="@style/AppTextView.PrimaryFont.WhiteActive.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_xxxx"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom ="@dimen/padding_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/holder_cert_tv_title"
            app:layout_constraintTop_toBottomOf="@+id/holder_cert_tv_title"
            tools:text="Master of Engineer" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/holder_cert_ic_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/padding_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="#FFFFFF" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>
